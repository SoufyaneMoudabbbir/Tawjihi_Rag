{
  "title": "Student Learning Profile",
  "description": "Help us understand your academic background and learning preferences to provide personalized educational support",
  "steps": [
    {
      "id": "personal",
      "title": "Personal Information",
      "description": "Tell us about yourself",
      "icon": "User",
      "fields": [
        {
          "name": "fullName",
          "label": "Full Name",
          "type": "text",
          "required": true,
          "placeholder": "Enter your full name",
          "gridCols": "md:col-span-1"
        },
        {
          "name": "age",
          "label": "Age",
          "type": "number",
          "required": true,
          "placeholder": "Your age",
          "min": 17,
          "max": 30,
          "gridCols": "md:col-span-1"
        },
        {
          "name": "university",
          "label": "University/Institution",
          "type": "text",
          "required": true,
          "placeholder": "Your university or college name",
          "gridCols": "md:col-span-1"
        },
        {
          "name": "studentLevel",
          "label": "Student Level",
          "type": "select",
          "required": true,
          "placeholder": "Select your level",
          "options": ["Undergraduate - Year 1", "Undergraduate - Year 2", "Undergraduate - Year 3", "Undergraduate - Year 4", "Graduate - Master's", "Graduate - PhD", "Professional Studies"],
          "gridCols": "md:col-span-1"
        },
        {
          "name": "languages",
          "label": "Preferred Learning Languages",
          "type": "checkbox",
          "required": true,
          "options": ["English", "French", "Arabic", "Spanish", "German", "Other"],
          "gridCols": "md:col-span-2",
          "minSelections": 1
        }
      ]
    },
    {
      "id": "academic",
      "title": "Academic Background",
      "description": "Your field of study and current courses",
      "icon": "GraduationCap",
      "fields": [
        {
          "name": "majorField",
          "label": "Major Field of Study",
          "type": "select",
          "required": true,
          "placeholder": "Select your major",
          "options": [
            "Computer Science",
            "Engineering",
            "Mathematics",
            "Physics",
            "Chemistry",
            "Biology",
            "Medicine",
            "Business Administration",
            "Economics",
            "Psychology",
            "Literature",
            "History",
            "Political Science",
            "Law",
            "Architecture",
            "Art & Design",
            "Other"
          ],
          "gridCols": "md:col-span-1"
        },
        {
          "name": "gpa",
          "label": "Current GPA/Average",
          "type": "text",
          "required": false,
          "placeholder": "e.g., 3.5/4.0 or 15/20",
          "gridCols": "md:col-span-1"
        },
        {
          "name": "currentCourses",
          "label": "Current Courses (This Semester)",
          "type": "textarea",
          "required": true,
          "placeholder": "List your current courses, one per line...\ne.g., Data Structures and Algorithms\nCalculus II\nPhysics I",
          "gridCols": "md:col-span-2",
          "rows": 4
        },
        {
          "name": "strugglingSubjects",
          "label": "Subjects You Find Challenging",
          "type": "checkbox",
          "required": false,
          "options": [
            "Mathematics",
            "Programming",
            "Physics",
            "Chemistry",
            "Statistics",
            "Writing",
            "Research Methods",
            "Theory-heavy subjects",
            "Practical applications",
            "Group projects",
            "None"
          ],
          "gridCols": "md:col-span-2"
        }
      ]
    },
    {
      "id": "learning",
      "title": "Learning Preferences",
      "description": "How do you learn best?",
      "icon": "Target",
      "fields": [
        {
          "name": "learningStyle",
          "label": "Preferred Learning Style",
          "type": "checkbox",
          "required": true,
          "options": [
            "Visual (diagrams, charts, images)",
            "Auditory (explanations, discussions)",
            "Reading/Writing (notes, summaries)",
            "Kinesthetic (hands-on, practice)",
            "Interactive (Q&A, quizzes)",
            "Step-by-step tutorials",
            "Real-world examples"
          ],
          "gridCols": "md:col-span-2",
          "minSelections": 1,
          "maxSelections": 4
        },
        {
          "name": "studyGoals",
          "label": "Primary Study Goals",
          "type": "checkbox",
          "required": true,
          "options": [
            "Understand course concepts deeply",
            "Prepare for exams",
            "Complete assignments successfully",
            "Improve problem-solving skills",
            "Connect theory to practice",
            "Build study schedules",
            "Review and reinforce learning",
            "Prepare for job interviews"
          ],
          "gridCols": "md:col-span-2",
          "minSelections": 1
        },
        {
          "name": "difficultyLevel",
          "label": "Preferred Explanation Level",
          "type": "radio",
          "required": true,
          "options": ["Beginner (simple explanations)", "Intermediate (balanced detail)", "Advanced (technical depth)", "Adaptive (adjust based on topic)"],
          "gridCols": "md:col-span-2"
        },
        {
          "name": "interactiveFeatures",
          "label": "Desired Interactive Features",
          "type": "checkbox",
          "required": false,
          "options": [
            "Practice quizzes",
            "Problem-solving exercises",
            "Study schedule creation",
            "Progress tracking",
            "Concept summaries",
            "Flashcard generation",
            "Study reminders"
          ],
          "gridCols": "md:col-span-2"
        }
      ]
    },
    {
      "id": "preferences",
      "title": "Study Preferences",
      "description": "Customize your learning experience",
      "icon": "Settings",
      "fields": [
        {
          "name": "studySchedule",
          "label": "Preferred Study Times",
          "type": "checkbox",
          "required": false,
          "options": [
            "Early morning (6-9 AM)",
            "Morning (9-12 PM)",
            "Afternoon (12-6 PM)",
            "Evening (6-9 PM)",
            "Night (9 PM-12 AM)",
            "Late night (12-6 AM)",
            "Flexible/No preference"
          ],
          "gridCols": "md:col-span-2"
        },
        {
          "name": "sessionLength",
          "label": "Preferred Study Session Length",
          "type": "radio",
          "required": false,
          "options": ["Short (15-30 minutes)", "Medium (30-60 minutes)", "Long (1-2 hours)", "Very long (2+ hours)", "Varies by topic"],
          "gridCols": "md:col-span-2"
        },
        {
          "name": "reminderFrequency",
          "label": "Study Reminder Frequency",
          "type": "select",
          "required": false,
          "placeholder": "Select frequency",
          "options": [
            "Daily",
            "Every 2 days",
            "Every 3 days",
            "Weekly",
            "Before exams only",
            "No reminders"
          ],
          "gridCols": "md:col-span-1"
        },
        {
          "name": "examPreparation",
          "label": "Exam Preparation Style",
          "type": "select",
          "required": false,
          "placeholder": "Select style",
          "options": [
            "Intensive cramming",
            "Gradual review",
            "Practice-focused",
            "Theory-focused",
            "Mixed approach",
            "No preference"
          ],
          "gridCols": "md:col-span-1"
        },
        {
          "name": "additionalNotes",
          "label": "Additional Learning Preferences",
          "type": "textarea",
          "required": false,
          "placeholder": "Any specific learning needs, accessibility requirements, or other preferences you'd like to share...",
          "gridCols": "md:col-span-2",
          "rows": 4
        }
      ]
    }
  ]
}
